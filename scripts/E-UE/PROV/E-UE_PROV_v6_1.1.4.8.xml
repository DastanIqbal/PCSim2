<!-- First are the document type and the attributes for our document -->
<pc2xml version="$Revision: 7768 $" name="EUE Prov 1.1.4.8" 
		descrip="Ability of eUE to Reject DHCPv6 Advertise When Link-Local IPv6 Addresses are Present" 
		number="EUE Prov 1.1.4.8">

	<!-- Next we define the each of state machines -->
	<template file="./templates/EUE_Prov_B_1_1_1.xml" name="RebootCM"/>
	
	<add_to fsm="RebootCM">
		<transition from="StartCapture_RebootWait" to="VerifyBootState" event="TimerExpired"/>
	
		<state ID="VerifyBootState">
			<prelude once="true">
				<send protocol="utility" msgtype="SNMPGet">
					<mod modtype="add" hdr="oids">
						<expr>DOCS-CABLE-DEVICE-MIB::docsDevServerBootState.0</expr>
					</mod>
					<mod modtype="replace" hdr="agentip">
						<msg_ref type="platform">DUT.CM IP Address</msg_ref>
					</mod>
				</send>
			</prelude>
			<response>
				<verify step="1">
					<contains>
						<msg_ref type="utility" index="0 0 2">SNMPResp.varBind</msg_ref>
						<expr>1</expr>
					</contains>
				</verify>
			</response>
			<postlude>
				<stop_capture/>
				<parse_capture name="eUE_DHCPc6">
					<parser_filter protocol="dhcpv6" clientMAC="DUT.MAC Address"/>
				</parse_capture>
				<verify step="2">
					<null>
						<capture_ref type="dhcpv6" name="eUE_DHCPc6">Request.num</capture_ref>
					</null>
				</verify>
					
			</postlude>
			<transition to="END" event="SNMPResp"/>
			<transition to="END" event="SNMPRespFailure"/>
		</state>
	</add_to>
</pc2xml>
