<pc2xml version="$Revision: 7768 $"
        name="EUE Prov 1.1.2.47-1"
        descrip="eUE implements the provisioning timer and secondary address acquisition timer (SAAT)."
        number="EUE Prov 1.1.2.47-1">

    <template file="./templates/EUE_Prov_B_1_1_1.xml" name="ProvTimer"/>
    
    <remove_from fsm="ProvTimer">
	<state ID="StartCapture_RebootWait"/>
    </remove_from>
	    
    <add_to fsm="ProvTimer">	
	
	<states initialstate="Message_1"/>
	
	<state ID="Message_1">
		<prelude>
			<log promptUser="true" expr="Make sure dual stack for the eDVA is enabled (pref=5) and DHCPv6 Advertise is blocked at provisioning server."/>
			<generate event="Branch1Event"/>
		</prelude>
		<transition to="Reboot" event="Branch1Event"/>
	</state>
	
	<state ID="StartCapture_RebootWait" timer="210000">
		<prelude once="true" >
			<start_capture>
				<filter>
					<var_expr>
						<expr>host </expr>
						<msg_ref type="platform">DUT.IP</msg_ref>
						<expr> || host </expr>
						<msg_ref type="platform">DUT.DHCP Server IP</msg_ref>
						<expr> || host </expr>
						<msg_ref type="platform">DUT.DNS Server IP</msg_ref>
					</var_expr>
				</filter>
			</start_capture>
		</prelude>
		<transition to="checkCM" event="TimerExpired"/>
	</state>
	
	<state ID="checkCM" >
		<prelude once="true">
			<!-- this is a check for DOCSIS 3.0 eCM. -->
			<send protocol="utility" msgtype="SNMPGet">
				<mod modtype="add" hdr="oids">
					<expr>DOCS-IF3-MIB::docsIf3CmStatusValue.2</expr>
				</mod>
				<!-- check for DOCSIS 2.0 eCM. -->
				<!--mod modtype="add" hdr="oids">
					<expr>DOCS-CABLE-DEVICE-MIB::docsDevServerBootState.0</expr>
				</mod-->
				<mod modtype="replace" hdr="agentip">
					<msg_ref type="platform">DUT.CM IP Address</msg_ref>
				</mod>
				<mod modtype="replace" hdr="version">
					<expr>2c</expr>
				</mod>
			</send>
		</prelude>
		<response>
			<verify step="2">
			    <contains>
				<msg_ref type="utility" index="0 0 2">SNMPResp.varBind</msg_ref>
				<expr>12</expr>
			    </contains>
			</verify>
		</response>
            <transition to="checkUE_IPv4" event="SNMPResp"/>
            <transition to="END" event="SNMPRespFailure"/>
	</state>
	
	<state ID="checkUE_IPv4" >
		<prelude>
			<send protocol="utility" msgtype="SNMPGet">
			    <mod modtype="add" hdr="oids">
				<expr>PKTC-IETF-MTA-MIB::pktcMtaDevProvisioningState.0</expr>
			    </mod>
			    <mod modtype="replace" hdr="agentip">
				<msg_ref type="platform">DUT.IP2</msg_ref>
			    </mod>
			    <mod modtype="replace" hdr="version">
				<expr>3</expr>
			    </mod>
			</send>
		</prelude>
		<response>
			<verify step="3">
			    <contains>
				<msg_ref type="utility" index="0 0 2">SNMPResp.varBind</msg_ref>
				<expr>1</expr>
			    </contains>
			</verify>
		</response>
		<transition to="checkProv" event="SNMPResp"/>
	</state>
	
	<state ID="checkProv">
		<prelude>
			<stop_capture/>
			<parse_capture name="eUE_dhcpv6">
				<parser_filter protocol="dhcpv6" clientMAC="DUT.MAC Address"/>
			</parse_capture>
			<parse_capture name="eUE_bootp">
				<parser_filter protocol="bootp" clientMAC="DUT.MAC Address"/>
			</parse_capture>
			<parse_capture name="eUE_SNMP">
				<parser_filter protocol="snmp" ip="DUT.IP2"/>
			</parse_capture>
			<parse_capture name="eUE_Syslog">
				<parser_filter protocol="syslog" ip="DUT.IP2"/>
			</parse_capture>

		
			<verify step="4">
				<lt>
				    <capture_ref type="dhcpv6" name="eUE_dhcpv6">Solicit.num</capture_ref>
				    <capture_ref type="snmp" name="eUE_SNMP">Inform Request.num</capture_ref>
				</lt>
			</verify>
			
			<verify step="5">
				<and>
					<null>
						<capture_ref type="dhcpv6" name="eUE_dhcpv6">Advertise.num</capture_ref>
					</null>
					<notnull>
						<capture_ref type="dhcpv6" name="eUE_dhcpv6" msg_instance="6">Solicit.num</capture_ref>
					</notnull>
				</and>
			</verify>

			<verify step="6">
				<and>
					<lt>
						<capture_ref type="dhcpv6" name="eUE_dhcpv6" add="100.0">Solicit.frame.time_relative.show</capture_ref>
						<capture_ref type="dhcpv6" name="eUE_dhcpv6" msg_instance="last">Solicit.frame.time_relative.show</capture_ref>
					</lt>
					<gt>
						<capture_ref type="dhcpv6" name="eUE_dhcpv6" add="130.0">Solicit.frame.time_relative.show</capture_ref>
						<capture_ref type="dhcpv6" name="eUE_dhcpv6" msg_instance="last">Solicit.frame.time_relative.show</capture_ref>
					</gt>
				</and>
			</verify>
			
			<verify step="7">
				<or>
					<contains>
						<capture_ref type="syslog" name="eUE_Syslog" msg_instance="last">syslog.msg.show</capture_ref>
						<expr>DHCPv6 no advertise received</expr>
					</contains>			
					<contains>
						<capture_ref type="syslog" name="eUE_Syslog" msg_instance="last">syslog.msg.show</capture_ref>
						<expr>Failed to acquire Secondary IP address V6.</expr>
					</contains>
				</or>
			</verify>
			<generate event="Branch1Event"/>
		</prelude>
		<transition to="ReConfigure2" event="Branch1Event"/>
	</state>
	
	<state ID="ReConfigure2"
	provFile="v4C.1.2.3.bin"
	policyFile="X_eUEv4_sub8_5min"
	nextState="Reboot_1"/>
	
	<state ID="Reboot_1" timer="5000">
		<!-- First we need to power cycle the UE to conduct the test -->
		<prelude once="true" >
			<send protocol="utility" msgtype="SNMPSet">
				<mod modtype="add" hdr="array">
					<var_expr>
						<expr>varBind 1 1 3 \r\n ][ , </expr>
						<expr>DOCS-CABLE-DEVICE-MIB::docsDevResetNow.0,INTEGER,1][\r\n</expr>
					</var_expr>
				</mod>
				<mod modtype="replace" hdr="agentip">
					<msg_ref type="platform">DUT.CM IP Address</msg_ref>
				</mod>
				<!-- Always use version 2 for a CM reset -->
				<mod modtype="replace" hdr="version">
					<expr>2c</expr>
				</mod>
			</send>
		</prelude>
		<response>
			<if>
				<eq>
					<msg_ref type="utility">Response</msg_ref>
					<expr>SNMPRespFailure</expr>
				</eq>
				<then>
					<fail/>
				</then>
			</if>
			<if>
				<or>
					<eq>
						<msg_ref type="sip">REGISTER.Contact.expires</msg_ref>
						<expr>0</expr>
					</eq>
					<eq>
						<msg_ref type="sip">REGISTER.Expires.value</msg_ref>
						<expr>0</expr>
					</eq>
				</or>
				<then>
					<send protocol="sip" msgtype="200-REGISTER"/>
				</then>
			</if>
		</response>
		<!-- Test cases deriving their functionality from this template
			should change the following transition to some local state -->
		<transition to="Reboot_1" event="SNMPResp"/>
		<transition to="StartCapture_RebootWait_1" event="TimerExpired"/>
		<transition to="END" event="SNMPRespFailure"/>
		<transition to="Reboot_1" event="REGISTER"/>
	</state>
	
	<state ID="StartCapture_RebootWait_1" timer="210000">
		<prelude once="true" >
			<start_capture>
				<filter>
					<var_expr>
						<expr>host </expr>
						<msg_ref type="platform">DUT.IP</msg_ref>
						<expr> || host </expr>
						<msg_ref type="platform">DUT.DHCP Server IP</msg_ref>
						<expr> || host </expr>
						<msg_ref type="platform">DUT.DNS Server IP</msg_ref>
					</var_expr>
				</filter>
			</start_capture>
		</prelude>
		<transition to="checkCM_1" event="TimerExpired"/>
	</state>
	
	<state ID="checkCM_1" >
		<prelude once="true">
			<!-- this is a check for DOCSIS 3.0 eCM. -->
			<send protocol="utility" msgtype="SNMPGet">
				<mod modtype="add" hdr="oids">
					<expr>DOCS-IF3-MIB::docsIf3CmStatusValue.2</expr>
				</mod>
				<!-- check for DOCSIS 2.0 eCM. -->
				<!--mod modtype="add" hdr="oids">
					<expr>DOCS-CABLE-DEVICE-MIB::docsDevServerBootState.0</expr>
				</mod-->
				<mod modtype="replace" hdr="agentip">
					<msg_ref type="platform">DUT.CM IP Address</msg_ref>
				</mod>
				<mod modtype="replace" hdr="version">
					<expr>2c</expr>
				</mod>
			</send>
		</prelude>
		<response>
			<verify step="9-2">
			    <contains>
				<msg_ref type="utility" index="0 0 2">SNMPResp.varBind</msg_ref>
				<expr>12</expr>
			    </contains>
			</verify>
		</response>
            <transition to="checkUE_IPv4_1" event="SNMPResp"/>
            <transition to="END" event="SNMPRespFailure"/>
	</state>
	
	<state ID="checkUE_IPv4_1" >
		<prelude>
			<send protocol="utility" msgtype="SNMPGet">
			    <mod modtype="add" hdr="oids">
				<expr>PKTC-IETF-MTA-MIB::pktcMtaDevProvisioningState.0</expr>
			    </mod>
			    <mod modtype="replace" hdr="agentip">
				<msg_ref type="platform">DUT.IP2</msg_ref>
			    </mod>
			    <mod modtype="replace" hdr="version">
				<expr>3</expr>
			    </mod>
			</send>
		</prelude>
		<response>
			<verify step="9-3">
			    <contains>
				<msg_ref type="utility" index="0 0 2">SNMPResp.varBind</msg_ref>
				<expr>1</expr>
			    </contains>
			</verify>
		</response>
		<transition to="ReConfigure_IPv6" event="SNMPResp"/>
	</state>
	
	<state ID="ReConfigure_IPv6" timer="180000">
		<prelude>
			<log promptUser="true" expr="Unblock DHCPv6 Advertise at provisioning server and deploy immediately."/>
		</prelude>
		<transition to="checkUE_IPv6_1" event="TimerExpired"/>
	</state>

	<state ID="checkUE_IPv6_1" >
		<prelude>
			<send protocol="utility" msgtype="SNMPGet">
			    <mod modtype="add" hdr="oids">
				<expr>PKTC-IETF-MTA-MIB::pktcMtaDevProvisioningState.0</expr>
			    </mod>
			    <mod modtype="replace" hdr="agentip">
				<msg_ref type="platform">DUT.IP</msg_ref>
			    </mod>
			    <mod modtype="replace" hdr="version">
				<expr>3</expr>
			    </mod>
			</send>
		</prelude>
		<response>
			<verify step="12">
			    <contains>
				<msg_ref type="utility" index="0 0 2">SNMPResp.varBind</msg_ref>
				<expr>1</expr>
			    </contains>
			</verify>
		</response>
		<transition to="checkProv_1" event="SNMPRespFailure"/>
		<transition to="checkProv_1" event="SNMPResp"/>
	</state>
		
	<state ID="checkProv_1">
		<prelude>
			<stop_capture/>
			<parse_capture name="eUE_dhcpv6_1">
				<parser_filter protocol="dhcpv6" clientMAC="DUT.MAC Address"/>
			</parse_capture>
			<parse_capture name="eCM_dhcpv6_1">
				<parser_filter protocol="dhcpv6" clientMAC="DUT.CM MAC Address"/>
			</parse_capture>
			<parse_capture name="eUE_SNMP_1">
				<parser_filter protocol="snmp" ip="DUT.IP2"/>
			</parse_capture>
			<parse_capture name="eUE_Syslog_1">
				<parser_filter protocol="syslog" ip="DUT.IP2"/>
			</parse_capture>

		
			<verify step="9-4">
				<lt>
				    <capture_ref type="dhcpv6" name="eUE_dhcpv6_1">Solicit.num</capture_ref>
				    <capture_ref type="snmp" name="eUE_SNMP_1">Inform Request.num</capture_ref>
				</lt>
			</verify>

			<verify step="10">
				<notnull>
					<capture_ref type="dhcpv6" name="eUE_dhcpv6_1" msg_instance="7">Solicit.num</capture_ref>
				</notnull>
			</verify>
			
			<verify step="13">
				<contains>
					<capture_ref type="syslog" name="eUE_Syslog_1" msg_instance="last">syslog.msg.show</capture_ref>
					<expr>Secondary IP address V6 acquired.</expr>
				</contains>			
			</verify>
			
			<verify step="14">
				<and>
					<gt>
						<capture_ref type="dhcpv6" name="eUE_dhcpv6_1" add="310.0">Solicit.frame.time_relative.show</capture_ref>
						<capture_ref type="dhcpv6" name="eUE_dhcpv6_1" msg_instance="last">Solicit.frame.time_relative.show</capture_ref>
					</gt>
					<lt>
						<capture_ref type="dhcpv6" name="eUE_dhcpv6_1" add="119.0">Solicit.frame.time_relative.show</capture_ref>
						<capture_ref type="dhcpv6" name="eUE_dhcpv6_1" msg_instance="last">Solicit.frame.time_relative.show</capture_ref>
					</lt>
				</and>
			</verify>
			<generate event="Branch1Event"/>
		</prelude>
		<transition to="IP-MIB_Query" event="Branch1Event"/>
	</state>
	
	<state ID="IP-MIB_Query">
		<prelude>
			<send protocol="utility" msgtype="SNMPGetTable">
				<mod modtype="add" hdr="oids">
					<expr>IP-MIB::ipNetToPhysicalEntry</expr>
				</mod>
				<mod modtype="replace" hdr="agentip">
					<msg_ref type="platform">DUT.IP</msg_ref>
				</mod>
				<mod modtype="replace" hdr="version">
					<expr>3</expr>
				</mod>
			</send>
		</prelude>
		<response>
			<!-- ipNetToPhysicalPhysAddress -->
			<verify step="15">
			    <contains>
				<capture_ref type="dhcpv6" name="eCM_dhcpv6_1">Solicit.Relay.Option1.Link-layer address.show</capture_ref>
				<msg_ref type="utility" index="0 0 2">SNMPResp.varBind</msg_ref>
			    </contains>
			</verify>
			<!-- ipNetToPhysicalLastUpdated -->
			<verify step="15">
			    <contains>
				<msg_ref type="utility" index="0 1 2">SNMPResp.varBind</msg_ref>
				<expr>0:</expr>
			    </contains>
			</verify>
			<!-- ipNetToPhysicalType -->
			<verify step="15">
			    <contains>
				<msg_ref type="utility" index="0 2 2">SNMPResp.varBind</msg_ref>
				<expr>4</expr>
			    </contains>
			</verify>
			<!-- ipNetToPhysicalState -->
			<verify step="15">
			    <contains>
				<msg_ref type="utility" index="0 3 2">SNMPResp.varBind</msg_ref>
				<expr>6</expr>
			    </contains>
			</verify>
			<!-- ipNetToPhysicalRowStatus -->
			<verify step="15">
			    <contains>
				<msg_ref type="utility" index="0 4 2">SNMPResp.varBind</msg_ref>
				<expr>1</expr>				
			    </contains>
			</verify>
		</response>
			
		<transition to="END" event="SNMPResp"/>
		<transition to="END" event="SNMPRespFailure"/>
	</state>
	
    </add_to>
</pc2xml>